// setting for brower
$(function() {
  var appConf = sclconfig.app;
  var ua   = navigator.userAgent.toLowerCase();
  sclconfig.deviceType = 'other';

  if (ua.search(/iphone|ipad|ipod/) > -1 || (ua.indexOf('macintosh') > -1 && 'ontouchend' in document)) {
    sclconfig.deviceType = appConf.ios.key;
  } else if(ua.search(/android/) > -1) {
    sclconfig.deviceType = appConf.android.key;
  } else {
    sclconfig.isPC = true;
    // hight for hide APP banner
    sclconfig.fancyboxOption.height = 620;
  }
  // add height for HLS Flash Mode
  if (window.cookie_func && window.cookie_func.get) {
    var ck = window.cookie_func.get('nol_school_player');
    if (ck && ck == 1) {
      sclconfig.fancyboxOption.height += 50;
    }
  }
});


for(var p in sclconfig.bangumi){
  sclconfig[p]=sclconfig.bangumi[p];
};

var schoolConfig=sclconfig;


